            <!-- Título -->
            <p class="titulo"> Faça uma <font color="#f58934"> SIMULAÇÃO </font> do seu Gerador Solar : </p>

            
            <!-- Formulário de Cadastro -->
		    <form action="SimuladorSolar" method="POST" enctype="multipart/form-data">
      

                <!-- CEP -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input" style="margin-top: 6px;"> Digite o seu CEP: </label>
                        <input type="text" id="Cep" name="Cep" class="form-control" placeholder="_ _ _ _ _ - _ _" required onkeypress="$(this).mask('00000-000')">
                    </div>
                </div>


                <!-- Valor -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input"> Insira a quantidade gasta com a energia: </label>
                        <input type="text" id="ValorGastoMensalmente" name="ValorGastoMensalmente" class="form-control" placeholder="R$ 0,00" required onkeypress="$(this).mask('0000,00', {reverse: true})">
                    </div>
                </div>

                
                <!-- Select de Concessionárias -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <label class="texto_input"> Informe a sua concessionária: </label>
                            <select name="Concessionaria" class="concessionaria">
                                <option value="79">          CPFL          </option>
                                <option value="81">   Eletropaulo   </option>
                                <option value="78"> EDP São Paulo </option>
                                <option value="83">       Elektro       </option>
                                <option value="85">      Energisa      </option>
                            </select>
                    </div>
                </div>

                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="SIMULAR" name="simular" id="simular" class="botao" style="margin-bottom: 27px;">
                    </div>
                </div>

            </form>
