@model List<Orcamento>
<!doctype html>
  <html lang="pt-br">
	<head>
	<meta charset="utf-8">
	    <title> Listagem dos Orçamentos </title>
	    <meta name="viewport" content="width=device-width, initial-scale=1">
	  
        <!-- Bootstrap e CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
        <link href="~/css/estilo.css" rel="stylesheet" type="text/css">

        <!-- JQuery -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"> </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>

	</head>

	<body>

        <!-- Menu Responsivo -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            
            <div class="container-fluid">
                
                <a> <img class="logomarca" src="~/imagens/logo_ietel.png">  </a>
                <a> <img class="logotipo"  src="~/imagens/letra_ietel.png"> </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav" style="gap: 80px">

                        <li class="nav-item">
                            <a class="nav-link" href="/agendamento/agendamento"> Agendamento </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/orcamento/listaOrcamento"> Lista de Orçamentos </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/vaga/adicionaVaga"> Adicionar Vagas </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/vaga/listaVaga"> Lista de Candidatos </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/informacao/index"> <button class="login"> Sair </button> </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>


        <!-- Listagem dos Orçamentos -->
	    <div class="container" style="padding: 1.7%;"> 


            <!-- Título -->
            <p class="titulo"> Listagem dos <font color="#f58934"> ORÇAMENTOS </font>: </p>

		   
            <!-- Data -->     
            <form class="form-group" action="/orcamento/listaOrcamento" method="POST">
                <div class="col-md-6 offset-md-3">
                    <label class="texto_lista_orcamento"> Data: </label>   
                    <input type="date" id="data" name="data" class="form-control" required placeholder="_ _ / _ _ / _ _ _ _">
                </div>
            </form>

	@foreach (var orcamento in Model)  
        { 


            <div class="lista">

                <table width="100%" style="margin-top: 15px; margin-left: 15px;">
                    <tr>
                        <!-- Nome --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 40px;"> Nome: </label> </td>
                        <td width="92%"> <input value="@orcamento.Nome" type="text" id="nome" name="nome" class="form-control" style="width: 95.7%; margin-left: 0px;" disabled> </td>
                    </tr>
                </table>
                

                <table width="100%" style="margin-left: 15px;">
                    <tr>
                        <!-- CPF --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 59px;"> CPF:  </label> </td>            
                        <td width="40%">
                            <input value="@orcamento.CPF" type="text" name="cpf" id="cpf" class="form-control" style="width: 99.5%; margin-left: 0px;" disabled> 
                        </td>

                        <!-- Telefone --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 16px;"> Telefone: </label> </td>
                        <td width="44%">
                            <div class="input_icone">
                                <input value="@orcamento.Telefone" type="text" id="telefone" name="telefone" class="form-control" style="width: 90.4%; margin-left: 0px;" disabled>
                                <i class="fas fa-phone " style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <table width="100%" style="margin-left: 15px;">
                    <tr>
                        <!-- Endereço --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 16px;"> Endereço: </label> </td>
                        <td width="92%"> <input value="@orcamento.Endereco" type="text" id="endereco" name="endereco" class="form-control" style="width: 95.7%; margin-left: 0px;" disabled> </td>
                    </tr>
                </table>
                

                <table width="100%" style="margin-left: 15px;">
                    <tr>
                        <!-- Bairro -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 40px;"> Bairro: </label> </td>            
                        <td width="40%">
                            <input value="@orcamento.Bairro" type="text" name="bairro" id="bairro" class="form-control" style="width: 100%; margin-left: 0px;" disabled> 
                        </td>

                        <!-- Número -->
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 20px;"> Número: </label> </td>
                        <td width="44%">
                            <input value="@orcamento.Numero" type="text" id="numero" name="numero" class="form-control" style="width: 91%; margin-left: 0px;" disabled>
                        </td>
                    </tr>
                </table>


                <table width="100%" style="margin-left: 15px;">
                    <tr>
                        <!-- CEP -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 58px;"> CEP: </label> </td>            
                        <td width="40%">
                            <input value="@orcamento.CEP" type="text" name="cep" id="cep" class="form-control" style="width: 100%; margin-left: 0px;" disabled> 
                        </td>

                        <!-- Cidade --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 31px;"> Cidade: </label> </td>
                        <td width="44%">
                            <input value="@orcamento.Cidade" type="text" id="cidade" name="cidade" class="form-control" style="width: 91%; margin-left: 0px;" disabled>
                        </td>
                    </tr>
                </table>


                <table width="100%" style="margin-left: 15px;">
                    <tr>
                        <!-- Horário -->   
                        <td> <label class="texto_input_cadastro" style="margin-right: 28px;"> Horário: </label> </td>            
                        <td width="41.8%">
                            <div class="input_icone_email">
                                <input value="@orcamento.Horario" type="text" name="horario" id="horario" class="form-control" style="width: 96%; margin-left: 0px;" disabled> 
                                <i class="fa-solid fa-clock" style="color: #f58934; margin-right: 20px; font-size: 16px; margin-top: 2px;"> </i>
                            </div>
                        </td>

                        <!-- Atendido -->  
                        <td> <label class="texto_input_cadastro" style="margin-left: 8px; margin-right: 14px;"> Atendido: </label> </td>
                        <td width="44%">
                            <div class="input_icone">
                                <input value="@orcamento.Status" type="text" name="atendido" id="atendido" class="form-control" style="width: 90.6%; margin-left: 0px;" disabled> 
                                <i class="fa-solid fa-square-check" style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="EDITAR" name="editar" id="editar" class="botao" style="margin-top: 15px; margin-bottom: 25px">
                    </div>
                </div>

            </div>
	}

        </div>

	</body>
  </html>
