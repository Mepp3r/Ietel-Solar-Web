            <!-- Formulário de Cadastro -->
		    <form action="/orcamento/orcamento" method="POST" enctype="multipart/form-data">
      
                <table width="100%">
                    <tr>
                        <!-- Nome --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 40px;"> Nome: </label> </td>
                        <td width="92%"> <input type="text" id="nome" name="nome" class="form-control" required style="width: 95.7%; margin-left: 0px;"> </td>
                    </tr>
                </table>
                

                <table width="100%">
                    <tr>
                        <!-- CPF --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 59px;"> CPF:  </label> </td>            
                        <td width="40%">
                            <input type="text" name="cpf" id="cpf" class="form-control" required placeholder="_ _ _ . _ _ _ . _ _ _ - _ _" onkeypress="$(this).mask('000.000.000-00');" style="width: 99.5%; margin-left: 0px;"> 
                        </td>

                        <!-- Telefone --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 17px;"> Telefone: </label> </td>
                        <td width="44%">
                            <div class="input_icone">
                                <input type="text" id="telefone" name="telefone" class="form-control" required placeholder="( _ _ ) _ _ _ _ _ - _ _ _ _" onkeypress="$(this).mask('(00) 00000-0000')" style="width: 90.4%; margin-left: 0px;">
                                <i class="fas fa-phone " style="color: #f58934;"> </i>
                            </div>
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Endereço --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 16px;"> Endereço: </label> </td>
                        <td width="92%"> <input type="text" id="endereco" name="endereco" class="form-control" required style="width: 95.7%; margin-left: 0px;"> </td>
                    </tr>
                </table>
                
    
                <table width="100%">
                    <tr>
                        <!-- Bairro -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 40px;"> Bairro: </label> </td>            
                        <td width="40%">
                            <input type="text" name="bairro" id="bairro" class="form-control" required style="width: 100%; margin-left: 0px;"> 
                        </td>

                        <!-- Número -->
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 20px;"> Número: </label> </td>
                        <td width="44%">
                            <input type="text" id="numero" name="numero" class="form-control" required style="width: 91%; margin-left: 0px;">
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- CEP -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 58px;"> CEP: </label> </td>            
                        <td width="40%">
                            <input type="text" name="cep" id="cep" class="form-control" required placeholder="_ _ _ _ _ - _ _" onkeypress="$(this).mask('00000-000')" style="width: 100%; margin-left: 0px;"> 
                        </td>

                        <!-- Cidade --> 
                        <td> <label class="texto_input_cadastro" style="margin-left: 26px; margin-right: 31px;"> Cidade: </label> </td>
                        <td width="44%">
                            <input type="text" id="cidade" name="cidade" class="form-control" required style="width: 91%; margin-left: 0px;">
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Data -->   
                        <td> <label class="texto_input_cadastro" style="margin-right: 52px;"> Data: </label> </td>            
                        <td width="40%">
                            <input type="date" name="data" id="data" class="form-control" required placeholder="_ _ / _ _ / _ _ _ _" style="width: 98.2%; margin-left: 0px;"> 
                        </td>

                        <!-- Horário -->  
                        <td> <label class="texto_input_cadastro" style="margin-left: 20px; margin-right: 25px;"> Horário: </label> </td>
                        <td width="44%">
