                                @foreach(var agendamento in ViewBag.HorarioAgendamento)
                                {
                                <option value="@agendamento.Horario">@agendamento.Horario </option>
                                }
                            </select>
                        </td>
                    </tr>
                </table>
                

                <!-- Botão -->
