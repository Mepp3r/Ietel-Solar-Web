  <!-- Não mostra datas anteriores -->
  <script>
    var hoje = new Date();
    hoje.setDate(hoje.getDate() + 1);
    hoje = hoje.toISOString().split('T')[0];                      
    document.getElementsByName("data")[0].setAttribute('min', hoje);
  </script>


  <!-- CEP automático -->
  <script>
    
    // blur - quando sair do campo
    $("#cep").blur(function()
    {
        // remove o que não é número
        var cep = this.value.replace(/[^0-9]/, "");
        
        // api
        var url = "https://viacep.com.br/ws/"+cep+"/json/";
        
        // retorno
        $.getJSON(url, function(dadosRetorno)
        {
            try
            {	
                $("#cidade").val(dadosRetorno.localidade + " - " + dadosRetorno.uf);
                document.getElementById('cidade').readOnly = true;
            } catch(ex){}
        });
        
	});

  </script>
