        <!-- Adicionar Vagas -->
	    <div class="container" style="padding: 1.7%;"> 


            <!-- Título -->
            <p class="titulo"> Adicione uma <font color="#f58934"> VAGA </font>: </p>


            <!-- Formulário de Cadastro -->
		    <form action="\vaga\adicionaVaga" method="POST" enctype="multipart/form-data">
      

                <table width="100%">
                    <tr>
                        <!-- Cargo -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 42px;"> Cargo: </label> </td>
                        <td width="92%"> <input type="text" id="cargo" name="cargo" class="form-control" required style="width: 96%; margin-left: 0px;"> </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Tipo --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 55px;"> Tipo: </label> </td>
                        <td width="92%"> 
                            <select name="tipo" class="horario" style="width: 96%; margin-left: 0px;">
                                <option value="Tempo Integral"> Tempo Integral </option>
                                <option value="Estágio"> Estágio </option>
                                <option value="Meio Período"> Meio Período </option>
                                <option value="Trainee"> Trainee </option>
                            </select>
                        </td>
                    </tr>
                </table>

                
                <table width="100%">
                    <tr>
                        <!-- Local -->  
                        <td> <label class="texto_input_cadastro" style="margin-right: 50px;"> Local: </label> </td>
                        <td width="92%"> <input type="text" id="local" name="local" class="form-control" required style="width: 96%; margin-left: 0px;"> </td>
                    </tr>
                </table>

            
                <table width="100%">
                    <tr>
                        <!-- Modelo --> 
                        <td> <label class="texto_input_cadastro" style="margin-right: 32px;"> Modelo: </label> </td>
                        <td width="92%"> 
                            <select name="modelo" class="horario" style="width: 96%; margin-left: 0px;">
                                <option value="Presencial"> Presencial </option>
                                <option value="Online"> Online </option>
                                <option value="Híbrido"> Híbrido </option>
                            </select>
                        </td>
                    </tr>
                </table>


                <table width="100%">
                    <tr>
                        <!-- Descrição --> 
                        <td width="8%"> <label class="texto_input_cadastro" style="margin-right: 15px;"> Descrição: </label> </td>
                        <td> 
                            <div class="mensagem_textarea">
                                <textarea class="mensagem" id="descricao" name="descricao"> </textarea>
                            </div> 
                        </td>
                    </tr>
                </table>


                <!-- Botão -->
                <div class="form-group">
                    <div class="col-md-6 offset-md-3">
                        <input type="submit" value="ADICIONAR" name="adicionar" id="adicionar" class="botao" style="margin-top: 15px; margin-bottom: 4px;">
                    </div>
                </div>
                
            </form>
        </div>
